@model MessageListModel

<div class="text-center">
    <h1 class="display-4">Receive messages</h1>
    <form asp-action="Receive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Message</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Messages.Count; i++)
                {
                    <tr>
                        <th scope="row">@(i + 1)  <input hidden asp-for="Messages[i]" /></th>
                        <td> @Model.Messages[i] </td>
                    </tr>
                }

            </tbody>
           
        </table>

        <button class="btn btn-primary px-4 py-2 m-4" name="button">
            Receive next
        </button>
    </form>

    <p class="small mt-4">
        <strong>@ViewBag.Message</strong>
    </p>
</div>
