@model CreateCategoryModel

<div class="text-center">
    <h1 class="display-4">Create new category</h1>
    <form asp-action="CreateCategory">
        <div class="row">
            <label>Name</label>
            <input asp-for="Name" class="form-control" />

        </div>

        <button class="btn btn-primary px-4 py-2 float-right" name="button" value="Send">
            Create category
        </button>
    </form>

    <p class="small">
        <strong>@ViewBag.Message</strong>
    </p>

    <a asp-action="Index" class="btn btn-secondary px-4 py-2 m-4" name="button">
        Go back to List
    </a>
</div>
