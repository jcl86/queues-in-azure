@model IEnumerable<ProductModel>

<div class="text-center">
    <h1 class="display-4">List of products</h1>

    <table class="table">
        <thead>
            <tr>

                <th>
                    Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Quantity
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    <a asp-action="UpdateProduct" asp-route-id="@item.Id" class="btn btn-primary">
                        Edit
                    </a>

                    <a asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <p class="small">
        <strong>@ViewBag.Message</strong>
    </p>

    <a asp-action="CreateProduct" class="btn btn-secondary px-4 py-2 m-4" name="button">
        Add new product
    </a>

    <a asp-action="CategoryIndex" class="btn btn-secondary px-4 py-2 m-4" name="button">
        Go back
    </a>
</div>
